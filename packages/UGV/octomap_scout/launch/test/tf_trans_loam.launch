<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- <camera_init to odom > -->
  <node pkg="octomap_scout" type="tf_trans_base" name="tf_camera_odom" output="screen">
    <param name="x" value="0"/>
    <param name="y" value="0"/>
    <param name="z" value="0.4"/>
    <param name="R" value="1.5707963"/>
    <param name="P" value="0"/>
    <param name="Y" value="1.5707963"/>
    <param name="parent_frame" value="odom"/>
    <param name="child_frame" value="camera_init"/>
  </node>

  <!-- <laser to base_link > -->
  <node pkg="octomap_scout" type="tf_trans_base" name="tf_camera_base" output="screen">
    <param name="x" value="0"/>
    <param name="y" value="-0.4"/>
    <param name="z" value="0"/>
    <param name="R" value="0"/>
    <param name="P" value="-1.5707963"/>
    <param name="Y" value="-1.5707963"/>
    <param name="parent_frame" value="camera"/>
    <param name="child_frame" value="base_link"/>
  </node>

