<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- /laser_cloud_surroundfor lego ** /laser_cloud_map for aloam ** /velodyne_cloud_registered  for loam >
  <arg name="pointcloudTopic" default="/laser_cloud_map"/>  
  <arg name="mapFrame" default="map"/> 
  <arg name="pointcloudFrame" default="base_link"/--> 

  <!-- **movebase config** -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <param name="footprint_padding" value="0.03" />
    <param name="controller_frequency" value="20.0" />
    <param name="planner_frequency" value="2.0" />
    <param name="planner_patience" value="5" />
    <param name="controller_patience" value="15" /> 
    <!-- <remap from="cmd_vel" to="mobile_base/commands/velocity"/> -->
    <param name="recovery_behavior_enabled" value="true" />
    <rosparam file="$(find gridmap_server)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find gridmap_server)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find gridmap_server)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find gridmap_server)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find gridmap_server)/config/base_local_planner_params.yaml" command="load" />  
    <param name="global_costmap/global_frame" value="/map"/>
    <param name="global_costmap/robot_base_frame" value="/base_link"/>
    <param name="global_costmap/point_cloud_sensor/sensor_frame" value="/camera_init"/>
    <param name="global_costmap/point_cloud_sensor/topic" value="/velodyne_cloud_registered"/>    
    <param name="local_costmap/global_frame" value="/map"/>
    <param name="local_costmap/robot_base_frame" value="/base_link"/>
    <!--param name="local_costmap/point_cloud_sensor/sensor_frame" value="/camera_depth_frame"/>
    <param name="local_costmap/point_cloud_sensor/topic" value="/camera_init"/>
    <param name="local_costmap/obstacle_layer/point_cloud_sensor/topic" value="/velodyne_cloud_registered"/-->
    <param name="local_costmap/point_cloud_sensor/sensor_frame" value="/camera_link"/>
    <param name="local_costmap/point_cloud_sensor/topic" value="/kinect/depth/points"/>
    <param name="local_costmap/obstacle_layer/point_cloud_sensor/topic" value="/kinect/depth/points"/>
    <remap from="map" to="/grid_map_visualization/traversability_grid"/>
  </node>

  <!-- RViz -->
  <node pkg="rviz" type="rviz" name="$(anon rviz)" respawn="false" output="screen" args="-d $(find gridmap_server)/rviz/aloam_gridmap.rviz"/>

</launch>
